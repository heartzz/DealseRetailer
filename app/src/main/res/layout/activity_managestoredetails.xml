<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/parentactionscroll"
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            >

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mainViewId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:layout_below="@+id/textView2"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardElevation="2dp"
                >

                <RelativeLayout
                    android:id="@+id/plustxt"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/dotted_border"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/image"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/removeicn"
                        android:src="@drawable/ic_close_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp" />

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:layout_centerInParent="true" />



                    <TextView
                        android:id="@+id/tv_plusbtn"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:textSize="38sp"
                        android:text="+"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/grey_80"
                        android:layout_below="@+id/removeicn"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/addtxt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:text="Click to select store image"
                        android:layout_below="@+id/tv_plusbtn"
                        android:layout_marginBottom="15dp"
                        android:layout_centerHorizontal="true"


                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/mainViewId"
                android:id="@+id/relativeLayoutbusiness"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">



                    <!-- &lt;!&ndash; Name Label &ndash;&gt;
                     <android.support.design.widget.TextInputLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="false"
                         android:layout_weight="0.2"
                         >
                         <EditText android:id="@+id/countrycode"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="0.2"
                             android:inputType="textCapWords"
                             android:textSize="18sp"
                             android:hint="Country" />
                     </android.support.design.widget.TextInputLayout>
    -->

                    <!-- Name Label -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_weight="0.5"
                        >
                        <EditText android:id="@+id/businesset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textSize="18dp"
                            android:hint="Shop name" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignRight="@+id/relativeLayoutbusiness"
                android:layout_alignEnd="@+id/relativeLayoutbusiness"
                android:layout_below="@+id/relativeLayoutbusiness"
                android:layout_alignLeft="@+id/relativeLayoutbusiness"
                android:layout_alignStart="@+id/relativeLayoutbusiness"
                android:id="@+id/relativeLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">


                    <!-- Name Label -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_weight="0.5"
                        >
                        <EditText android:id="@+id/firstnameet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textSize="18dp"
                            android:hint="Owner First Name" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <!-- Name Label -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_weight="0.5"
                        >
                        <EditText android:id="@+id/lastnameet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:textSize="18dp"
                            android:hint="Owner Last Name" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>


            <!--  Email Label -->
            <!--  <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginBottom="8dp"></android.support.design.widget.TextInputLayout>

            <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:layout_alignRight="@+id/relativeLayout"
                 android:layout_alignEnd="@+id/relativeLayout"
                 android:layout_below="@+id/relativeLayout"
                 android:layout_alignLeft="@+id/relativeLayout"
                 android:layout_alignStart="@+id/relativeLayout"
                 android:id="@+id/relativeLayoutemail"
                 >


                 &lt;!&ndash; Name Label &ndash;&gt;
                 <android.support.design.widget.TextInputLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentTop="false"
                     android:layout_alignParentRight="true"
                     android:layout_alignParentEnd="true"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true">


                     <EditText android:id="@+id/input_email"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="textEmailAddress"
                         android:hint="Email"
                         android:layout_alignParentBottom="true"
                         android:layout_centerHorizontal="true" />

                 </android.support.design.widget.TextInputLayout>
             </RelativeLayout>-->






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignRight="@+id/relativeLayout"
                android:layout_alignEnd="@+id/relativeLayout"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_alignStart="@+id/relativeLayout"
                android:id="@+id/relativeLayoutcountry"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">



                    <!-- &lt;!&ndash; Name Label &ndash;&gt;
                     <android.support.design.widget.TextInputLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="false"
                         android:layout_weight="0.2"
                         >
                         <EditText android:id="@+id/countrycode"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="0.2"
                             android:inputType="textCapWords"
                             android:textSize="18sp"
                             android:hint="Country" />
                     </android.support.design.widget.TextInputLayout>
    -->

                    <!-- Name Label -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_weight="0.5"
                        >
                        <EditText android:id="@+id/phoneet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textSize="18dp"
                            android:hint="Owner Mobile" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignRight="@+id/relativeLayoutcountry"
                android:layout_alignEnd="@+id/relativeLayoutcountry"
                android:layout_below="@+id/relativeLayoutcountry"
                android:layout_alignLeft="@+id/relativeLayoutcountry"
                android:layout_alignStart="@+id/relativeLayoutcountry"
                android:id="@+id/relativeLayoutEmail"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">



                    <!-- &lt;!&ndash; Name Label &ndash;&gt;
                     <android.support.design.widget.TextInputLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="false"
                         android:layout_weight="0.2"
                         >
                         <EditText android:id="@+id/countrycode"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="0.2"
                             android:inputType="textCapWords"
                             android:textSize="18sp"
                             android:hint="Country" />
                     </android.support.design.widget.TextInputLayout>
    -->

                    <!-- Name Label -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_weight="0.5"
                        >
                        <EditText android:id="@+id/emailet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textSize="18dp"
                            android:hint="Email" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutetemail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignEnd="@+id/relativeLayoutEmail"
                android:layout_alignLeft="@+id/relativeLayoutEmail"
                android:layout_alignRight="@+id/relativeLayoutEmail"
                android:layout_alignStart="@+id/relativeLayoutEmail"
                android:layout_below="@+id/relativeLayoutEmail"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_weight="0.5"
                        >
                        <EditText
                            android:id="@+id/storecontactet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:maxLength="10"
                            android:hint="Store Contact No."
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/relativeLayoutetemail"
                android:layout_alignLeft="@+id/relativeLayoutetemail"
                android:layout_alignStart="@+id/relativeLayoutetemail"
                android:layout_alignRight="@+id/relativeLayoutetemail"
                android:layout_alignEnd="@+id/relativeLayoutetemail"
                android:id="@+id/addresslbl"
                >


                <!-- Name Label -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    >


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addressrt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="Address"
                        android:textSize="18dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_alignRight="@+id/addresslbl"
                android:layout_alignEnd="@+id/addresslbl"
                android:layout_below="@+id/addresslbl"
                android:layout_alignLeft="@+id/addresslbl"
                android:layout_alignStart="@+id/addresslbl"
                android:textColorHint="@color/overlay_dark_40"
                android:hint="Area">

                <AutoCompleteTextView
                    android:id="@+id/av_areaselect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:inputType="none"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_storetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_alignRight="@+id/tl_area"
                android:layout_alignEnd="@+id/tl_area"
                android:layout_below="@+id/tl_area"
                android:layout_alignLeft="@+id/tl_area"
                android:layout_alignStart="@+id/tl_area"
                android:textColorHint="@color/overlay_dark_40"
                android:hint="Store Type">

                <AutoCompleteTextView
                    android:id="@+id/av_storetypeselect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:inputType="none"
                    />

            </com.google.android.material.textfield.TextInputLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignRight="@+id/tl_area"
                android:layout_alignEnd="@+id/tl_area"
                android:layout_below="@+id/tl_storetype"
                android:layout_alignLeft="@+id/tl_area"
                android:layout_alignStart="@+id/tl_area"
                android:id="@+id/relativeLayoutp"
                >


                <!-- Name Label -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">


                    <EditText android:id="@+id/cityet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="Ahmedabad"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="18dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignRight="@+id/relativeLayoutp"
                android:layout_alignEnd="@+id/relativeLayoutp"
                android:layout_below="@+id/relativeLayoutp"
                android:layout_alignLeft="@+id/relativeLayoutp"
                android:layout_alignStart="@+id/relativeLayoutp"
                android:id="@+id/relativeLayoutpp"
                >


                <!-- Name Label -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">


                    <EditText android:id="@+id/countryet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="India"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="18dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>






        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="Done"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
